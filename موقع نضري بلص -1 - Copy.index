    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        // عداد العملاء المتطور
        function startCustomerCounter() {
            let count = 3000;
            const counter = document.getElementById('customer-counter');
            
            // زيادة العداد بشكل دوري
            setInterval(() => {
                const increment = Math.floor(Math.random() * 3) + 1;
                count += increment;
                counter.textContent = count + "+";
                
                // تأثير رقمي عند التغيير
                counter.animate([
                    { transform: 'scale(1.1)', opacity: 0.8 },
                    { transform: 'scale(1)', opacity: 1 }
                ], {
                    duration: 500,
                    easing: 'ease-out'
                });
            }, 8000);
        }
        
        // تأثير الظهور عند التمرير
        function setupScrollAnimation() {
            const elements = document.querySelectorAll('.animate-on-scroll');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('visible');
                    }
                });
            }, {
                threshold: 0.1
            });
            
            elements.forEach(element => {
                observer.observe(element);
            });
        }
        
        // تهيئة أزرار PayPal
        paypal.HostedButtons({
            hostedButtonId: "4XZN3Z5837LZL",
            onApprove: function(data, actions) {
                return actions.order.capture().then(function(details) {
                    // عند اكتمال الدفع
                    $('#buy').hide();
                    $('.reviews-section').hide();
                    $('.faq-section').hide();
                    $('#download-section').fadeIn();
                    
                    // بدء العد التنازلي للتنزيل التلقائي
                    let countdown = 5;
                    const countdownElement = $('#auto-download-count');
                    const countdownInterval = setInterval(() => {
                        countdownElement.text(countdown);
                        countdown--;
                        
                        if (countdown < 0) {
                            clearInterval(countdownInterval);
                            triggerDownload();
                        }
                    }, 1000);
                });
            },
            onError: function(err) {
                console.error('حدث خطأ في الدفع:', err);
                alert('حدث خطأ أثناء عملية الدفع. يرجى المحاولة مرة أخرى أو التواصل مع الدعم الفني.');
            }
        }).render(".paypal-button-container");

        // دالة تنزيل الملف
        function triggerDownload() {
            // هنا رابط ملف الوورد الفعلي
            const fileUrl = "كورس نضري bluse.pdf";
            
            // إنشاء عنصر a خفي للتنزيل
            const a = document.createElement('a');
            a.href = fileUrl;
            a.download = "ملف_أسئلة_رخصة_القيادة_السعودية.pdf";
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            
            // تغيير نص الزر بعد التنزيل
            $('#download-btn').html('<i class="fas fa-check"></i> تم التنزيل بنجاح');
            $('#download-btn').css('background', 'linear-gradient(135deg, #27ae60, #1e8449)');
        }

        // تنزيل عند النقر على الزر يدوياً
        $('#download-btn').click(function() {
            triggerDownload();
        });

        // بدء كل شيء عند تحميل الصفحة
        $(document).ready(function() {
            startCustomerCounter();
            setupScrollAnimation();
            
            // تأثير اهتزاز زر التنزيل لجذب الانتباه
            setInterval(() => {
                $('#download-btn').addClass('animate__tada');
                setTimeout(() => {
                    $('#download-btn').removeClass('animate__tada');
                }, 1000);
            }, 5000);
        });
    </script>
